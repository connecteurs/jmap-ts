{
  "compilerOptions": {
    "baseUrl": ".",
    "incremental": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "noImplicitReturns": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "moduleResolution": "node",
    "paths": {
      "@connecteurs/*": ["packages/*/src"]
    }
  }
}
